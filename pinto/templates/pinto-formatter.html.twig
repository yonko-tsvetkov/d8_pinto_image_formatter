{#
/**
 * @file
 * Default theme implementation to display a pinto formatter field.
 *
 * Available variables:
 * - image: A collection of image data.
 * - image_style: An optional image style.
 * - url: An optional URL the image can be linked to.
 * - pinto_caption: The image alt to be used as a caption.
 *
 * @see template_preprocess_pinto_formatter()
 *
 * @ingroup themeable
 */
#}

{% if url %}
  <a href="{{ url }}">{{ image }}</a>
{% else %}
  {{ image }}
{% endif %}
{% if pinto_caption %}
  <div class="pinto-caption">{{ pinto_caption }}</div>
{% endif %}
